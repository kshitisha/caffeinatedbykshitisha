<!DOCTYPE html>
<html lang="en" ng-app="myApp">
<head>
  <link rel="stylesheet" href="css/feature.css">
  <%- include('head.ejs') %>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>

  <script type="text/javascript">
    angular.module('myApp', [])
      .controller('ProductController', function($scope) {

        $scope.products = [
          { id: 1, product_id: 1, coffee_name: 'Irish Coffee', price: 450 },
          { id: 2, product_id: 2, coffee_name: 'Romano', price: 325 },
          { id: 3, product_id: 3, coffee_name: 'Cappuccino', price: 375 },
          { id: 4, product_id: 4, coffee_name: 'Mocha', price: 400 },
          { id: 5, product_id: 5, coffee_name: 'Espresso Laccino', price: 425 },
          { id: 6, product_id: 6, coffee_name: 'Bicerin', price: 350 },
          { id: 7, product_id: 7, coffee_name: 'Doppio', price: 300 },
          { id: 8, product_id: 8, coffee_name: 'Macchiato', price: 375 },
          { id: 9, product_id: 9, coffee_name: 'Mead Raf', price: 400 },
          { id: 10, product_id: 10, coffee_name: 'Caramel Frappe', price: 475 },
          { id: 11, product_id: 11, coffee_name: 'Breve', price: 425 },
          { id: 12, product_id: 12, coffee_name: 'Raf Coffee', price: 375 }
        ];

        $scope.addToCart = function(productId) {
          console.log('Adding product with ID:', productId);
        };
      });
  </script>
</head>
<body ng-controller="ProductController">
  <div class="container">
    <%- include('header.ejs') %>
    <div class="items">
      <div class="row" ng-repeat="product in products" ng-if="$index % 3 === 0 || $last">
        <div class="featuredItems" ng-repeat="item in products.slice($index, $index + 3)">
          <div id="product-{{ item.id }}" class="single-product">
            <div class="part-1" ng-style="{'background-image': 'url(\'images/product/' + item.product_id + '.jpg\')'}">
              <ul>
                <li><a href="javascript:void(0);" ng-click="addToCart()"><i class="fas fa-shopping-cart"></i></a></li>
                <li><a href="javascript:void(0);"><i class="fas fa-heart"></i></a></li>
                <li><a href="javascript:void(0);"><i class="fas fa-plus"></i></a></li>
              </ul>
            </div>
            <div class="part-2">
              <h3 class="product-title">{{ item.coffee_name }}</h3>
              <span class="price">â‚¹ {{ item.price }}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
